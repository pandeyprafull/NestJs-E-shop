{
    "name": "e-shop",
    "version": "0.0.1",
    "description": " NestJs API Backend for E-shop",
    "author": "Prafull Pandey <prafullpandey68@gmail.com>",
    "private": true,
    "license": "MIT",
    "scripts": {
        "clean": "rimraf dist",
        "build": "npm run clean && tsc -p tsconfig.build.json",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "echo \"Starting development in watch mode\" && nodemon",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node -r dotenv/config dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "gen": "./sh/generateModule.sh"
    },
    "dependencies": {
        "@nestjs/axios": "0.0.2",
        "@nestjs/common": "^8.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/platform-express": "^8.0.10",
        "@nestjs/typeorm": "^8.0.2",
        "@shop_org/schemas": "^1.0.3",
        "class-validator": "^0.13.1",
        "dotenv": "^10.0.0",
        "morgan": "^1.10.0",
        "pg": "^8.7.1",
        "postgres": "^1.0.2",
        "randomstring": "^1.2.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.3.1",
        "typeorm": "^0.2.38",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/axios": "^0.14.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.1",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.10.3",
        "@types/randomstring": "^1.1.7",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^27.0.6",
        "nodemon": "^2.0.13",
        "prettier": "^2.3.2",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.10.1",
        "tslib": "^2.3.1",
        "typescript": "^4.4.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
